{
    "name": "kosh",
    "version": "1.0.7",
    "description": "KOSH is a inventory and operational software built to cater specific needs of businesses.",
    "main": "electron/main.js",
    "type": "commonjs",
    "author": {
        "name": "Abhijeet Shinde",
        "email": "invistock@gmail.com"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/com-Abhijeet/invistock-releases/releases"
    },
    "scripts": {
        "dev": "concurrently -k -n FRONTEND,BACKEND,ELECTRON -c cyan,magenta,yellow \"npm:serve-frontend\" \"npm:serve-backend\" \"npm:serve-electron\"",
        "serve-frontend": "cd frontend && npm run dev",
        "serve-backend": "cd backend && nodemon index.mjs",
        "serve-electron": "wait-on http://localhost:5173 && electron electron/main.js",
        "build:frontend": "cd frontend && npm install && npm run build",
        "build:electron": "electron-builder",
        "build": "npm run build:frontend && npm run build:electron",
        "buildWithObfuscate": "npm run build:frontend && node scripts/obfuscate.js && npm run build:electron",
        "postinstall": "electron-rebuild",
        "rebuild:backend": "cd backend && npm rebuild --runtime=electron --target=37.2.3 --dist-url=https://electronjs.org/headers --arch=x64",
        "preview": "vite preview",
        "publish": "npm run build && electron-builder --publish always",
        "upload": "electron-builder --publish always"
    },
    "devDependencies": {
        "concurrently": "^9.2.0",
        "electron": "^37.2.3",
        "electron-builder": "^26.0.12",
        "electron-rebuild": "^3.2.9",
        "glob": "^13.0.0",
        "javascript-obfuscator": "^4.2.0",
        "wait-on": "^8.0.3"
    },
    "dependencies": {
        "@whiskeysockets/baileys": "^7.0.0-rc.9",
        "aksharamukha": "^2.3.0-21",
        "bonjour-service": "^1.3.0",
        "bwip-js": "^4.7.0",
        "electron-log": "^5.4.3",
        "electron-store": "^6.0.1",
        "electron-updater": "^6.6.2",
        "googleapis": "^166.0.0",
        "node-machine-id": "^1.1.12",
        "pino": "^10.3.1",
        "puppeteer-core": "^24.34.0",
        "qrcode": "^1.5.4",
        "whatsapp-web.js": "^1.34.2",
        "xlsx": "^0.18.5"
    },
    "build": {
        "appId": "com.abhijeetShinde.invistock",
        "productName": "KOSH - inventory management",
        "artifactName": "KoshInventory-Setup-${version}.${ext}",
        "directories": {
            "buildResources": "assets",
            "output": "dist_electron"
        },
        "files": [
            "electron/**",
            "backend/**",
            {
                "from": "frontend/dist",
                "to": "dist",
                "filter": [
                    "**/*"
                ]
            },
            "!**/.wwebjs_auth",
            "!**/.wwebjs_cache",
            "!**/.webjs-auth",
            "!**/.webjs-cache",
            "!**/.puppeteer",
            "!**/session-data"
        ],
        "publish": [
            {
                "provider": "github",
                "owner": "com-abhijeet",
                "repo": "invistock-releases"
            }
        ],
        "win": {
            "target": "nsis",
            "icon": "assets/icon.png"
        }
    }
}
